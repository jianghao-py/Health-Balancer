    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/chart_up"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_startDate"
                android:layout_width="349dp"
                android:layout_height="28dp"
                android:layout_marginTop="40dp"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_startDate"
                android:layout_width="187dp"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:text="Select Start Date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline32"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_endDate"
                android:layout_width="338dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView30" />

            <Button
                android:id="@+id/button_endDate"
                android:layout_width="188dp"
                android:layout_height="37dp"
                android:layout_marginTop="12dp"
                android:text="Select End date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline32"
                app:layout_constraintTop_toBottomOf="@+id/button12" />

            <TextView
                android:id="@+id/textView_showC"
                android:layout_width="303dp"
                android:layout_height="35dp"
                android:layout_marginBottom="40dp"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/button14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_showC"
                android:layout_width="188dp"
                android:layout_height="37dp"
                android:layout_marginTop="-15dp"
                android:text="Show Calories intake based on records you created"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/textView_showC"
                app:layout_constraintTop_toBottomOf="@id/button_startDate" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chart_bottom"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>